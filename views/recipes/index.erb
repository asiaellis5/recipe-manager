<% flash.keys.each do |type| %>
  <div data-alert class="flash <%= type %> alert-box radius">
    <%= flash[type] %>
    <a href="#" class="close">&times;</a>
  </div>
<% end %>

<% if @user %>
  <h1>Welcome <%= @user.email %></h1>
<% end %>

<form action="/recipes/add" method="post">
<input type="text" name= title size=30 placeholder= "title">
  <input type="text" name= url size=30 placeholder= "url">
  <input type="submit" value="Add Recipe">
</form>

<ul>
<% @recipes.each do |recipe|%>
  <a href='<%= recipe.url %>'>
  <li><%=recipe.title %></li></a>
</ul>

<ul>
<% recipe.comments.each do |comment| %>
    <li><%= comment.comment %></li>
  <% end %>
</ul>

  <form action="/recipes/<%= recipe.id %>/update" method="get">
  <input type="submit" value="Update" id="Update<%=recipe.title%>" placeholder="Update">
</form>

<form action="/recipe/<%=recipe.id%>" method="post">
  <input type="submit" value="Delete" id="Delete<%=recipe.title%>" placeholder="Delete">
  <input type="hidden" name="_method" value="delete">
</form>

<form action="/recipes/<%= recipe.id %>/addcomments" method="get">
  <input type="submit" value="Add Comment" id="AddComment<%=recipe.title%>">
</form>

<% end %>

</ul>

<form action="/" method="get">
  <input type="submit" value="Back" placeholder="Back">
</form>