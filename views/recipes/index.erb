<ul>
<% @recipes.each do |recipe|%>
  <a href='<%= recipe.url %>'>
  <li><%=recipe.title %></li>

  <form action="/recipes/<%= recipe.id %>/update" method="get">
  <input type="submit" value="Update" id="Update<%=recipe.title%>" placeholder="Update">
</form>

<form action="/recipe/<%=recipe.id%>" method="post">
  <input type="submit" value="Delete" id="Delete<%=recipe.title%>" placeholder="Delete">
  <input type="hidden" name="_method" value="delete">
</form>
<% end %>
</ul>